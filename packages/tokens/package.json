{
  "name": "@hitchhub/tokens",
  "version": "0.5.0",
  "description": "The hitchhub design tokens.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hitchhubio/hitchhub.git",
    "directory": "packages/tokens"
  },
  "prettier": "@aaos/prettier-config",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier 'src/**/*.{ts,json}' --write",
    "format:check": "prettier 'src/**/*.{ts,json}' --check",
    "lint": "eslint 'src/**/*.{ts,json}'",
    "types:check": "tsc -b --noEmit --incremental",
    "build": "pnpm build:tokens && pnpm build:source",
    "build:tokens": "tsx scripts/build.ts",
    "build:source": "tsup"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@aaos/eslint-config": "0.5.0",
    "@aaos/prettier-config": "0.5.0",
    "@hitchhub/token-builder": "workspace:*",
    "@hitchhub/ts-config": "workspace:*",
    "eslint": "^9.39.1",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.9.3"
  }
}
