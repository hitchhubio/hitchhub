{
  "name": "@hitchhub/theme-default",
  "version": "0.4.0",
  "description": "The hitchhub default theme.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./theme.css": "./dist/theme.css",
    "./light.css": "./dist/light.css",
    "./dark.css": "./dist/dark.css",
    "./tailwind.css": "./dist/tailwind.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hitchhubio/hitchhub.git",
    "directory": "packages/theme-default"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier 'src/**/*.ts' --write",
    "format:check": "prettier 'src/**/*.ts' --check",
    "lint": "eslint 'src/**/*.ts'",
    "build": "pnpm build:tokens && pnpm build:source",
    "build:tokens": "tsx scripts/build.ts",
    "build:source": "tsup"
  },
  "prettier": "@aaos/prettier-config",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@aaos/eslint-config": "0.5.0",
    "@aaos/prettier-config": "0.5.0",
    "@hitchhub/theme-builder": "workspace:*",
    "@hitchhub/ts-config": "workspace:*",
    "eslint": "~9.39.1",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.9.3"
  }
}
