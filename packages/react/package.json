{
  "name": "@hitchhub-react/ds",
  "version": "0.3.0",
  "description": "The hitchhub collection of React components.",
  "type": "module",
  "main": "dist/hitchhub.umd.js",
  "module": "dist/hitchhub.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/hitchhub.esm.js",
      "require": "./dist/hitchhub.umd.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "types:check": "tsc -b --noEmit --incremental",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:ts": "tsup",
    "build:styles": "pnpm dlx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "prettier": "@aaos/prettier-config",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@hitchhub/tokens": "workspace:*",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  },
  "devDependencies": {
    "@aaos/eslint-config": "0.5.0",
    "@aaos/prettier-config": "0.5.0",
    "@hitchhub/theme-default": "workspace:*",
    "@hitchhub/ts-config": "workspace:*",
    "@storybook/addon-docs": "^10.0.5",
    "@storybook/react": "^10.0.5",
    "@storybook/react-vite": "^10.0.5",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.0.5",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^10.0.5",
    "tailwindcss": "^4.1.7",
    "tsup": "^8.5.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
