{
  "name": "root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22.15.1",
    "pnpm": ">=10.11.0"
  },
  "scripts": {
    "test": "nx run-many --target=test",
    "build": "nx run-many --target=build",
    "build:libs": "nx run-many --target=build --all --exclude=tag:type:app",
    "lint": "nx run-many --target=lint",
    "types:check": "nx run-many --target=types:check",
    "format": "nx run-many --target=format",
    "format:check": "nx run-many --target=format:check",
    "storybook": "nx run @hitchhub-react/ds:watch & nx run @hitchhub-react/ds:storybook",
    "storybook:build": "nx run @hitchhub-react/ds:storybook:build",
    "update:dependencies": "pnpm update --latest --recursive --interactive"
  },
  "devDependencies": {
    "@nx/devkit": "22.1.3",
    "@nx/js": "^22.1.3",
    "nx": "22.1.3"
  }
}
